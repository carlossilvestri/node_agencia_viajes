extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12                
                include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center #{error.mensaje}
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre" type="text" name="nombre" placeholder="Tu nombre" class="form-control" value= nombre)
                            .form-group
                                label(for="correo") Correo
                                input(id="correo" type="email" name="correo" placeholder="Tu correo electr√≥nico" class="form-control" value= correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea(name="mensaje" rows="3" placeholder="Tu Mensaje" class="form-control" id="mensaje") #{mensaje}
                            input(type="submit" value="Agregar" class="btn btn-success btn-block")
